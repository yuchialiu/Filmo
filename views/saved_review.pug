      const locale = !{ locale_string };

      // logout
      async function logout(e) {
        e.preventDefault();        
        
        await axios({
          method: 'get',
          url: '/api/1.0/user/logout',
        });
        alert("You have successfully logged out!");
        window.location.href = `/home?locale=${locale}`;
      }

      $('#logout_btn').on('click', logout);      

      //- const locale = !{ locale };
