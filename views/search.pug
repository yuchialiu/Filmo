extends layout.pug 

block head
  link(rel='stylesheet', href='/public/assets/css/index.css', type='text/css')

  script(src='https://code.jquery.com/jquery-3.5.1.min.js', type="text/javascript")
  script(src='https://unpkg.com/axios/dist/axios.min.js')

block content 
  body

  //- div#movie_id(data-id=`${data.movie_id}`) 

  - if (data === 'empty')
    h1 no movie
  - else 
    - for (let i =  0 ; i < data.length; i++)
      a.list_link(href=`/movie?id=${data[i].movie_id}&locale=${locale}`)
        img.list_img(src=`${data[i].poster}`)
        p.list_title #{data[i].title}