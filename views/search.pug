extends layout.pug 

block head
  link(rel='stylesheet', href='/public/assets/css/movie_list.css')

  script(src='https://code.jquery.com/jquery-3.5.1.min.js', type="text/javascript")
  script(src='https://unpkg.com/axios/dist/axios.min.js')

block content 
  body
    div.main_outer_search(class='d-flex justify-content-center')
      //- div#movie_id(data-id=`${data.movie_id}`) 
      - if (data === 'empty')
        h1.no_review Cannot Find the Movie You're Searching For
      - else 
        div.movie_search.justify-content-flex-start           
          - for (let i =  0 ; i < data.length; i++)
            div.movie_item_search
              a.list_link(href=`/movie?id=${data[i].movie_id}&locale=${locale}`)
                img.list_img(src=`${data[i].poster}`)
                p.list_title #{data[i].title}