extends layout.pug 


block content 
  link(rel='stylesheet', href='./public/assets/css/index.css')
  script(src="https://code.jquery.com/jquery-3.5.1.min.js", type="text/javascript")
  script(src='https://unpkg.com/axios/dist/axios.min.js')

  .banner
  h1.title New Release
  a.banner_link
    h3.banner_title
    div.banner_media
      img.banner_img
      iframe.banner_trailer(width='640' height='390', frameborder = '0', allowfullscreen = '',)


  .blocks
  h1.second_title See More
  //- div.list_media(style='height:100%; display: flex; ;float: center;  ')
    //- - for (let i = 3; i <10 ; i++)
  div.list
    a.list_link
      img.list_img
      p.list_title 

  script.

    var config = {
      method: 'get',
      url: '/api/1.0/movie/list',
      headers: { }
    };

    axios(config)
    .then(function (response) {
      console.log(JSON.stringify(response.data));
      const list = response.data.data
      $('.banner_link').attr('href', 'www.google.com')
      $('.banner_title').html(list[3].title);
      $('.banner_img').attr('src', list[3].poster)
      $('.banner_trailer').attr('src', list[3].trailer)

      d = document.createElement("div") 
      a = document.createElement("a") 
      img = document.createElement("img") 
      p = document.createElement("p") 

      for (let i = 4 ; i < 20 ; i++){
        $(d).addClass('list_div').appendTo('.list')
        $(a).addClass('list_link').attr('href', list[i].trailer).appendTo('.list_div')
        $(img).addClass('list_img').attr('src', list[i].poster).appendTo('.list_link')
        $(p).addClass('list_title').html(list[i].title).appendTo('.list_img')
      }
    }

    )
    .catch(function (error) {
      console.log(error);
    });



