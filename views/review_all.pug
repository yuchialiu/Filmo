extends layout.pug 

block head
  link(rel='stylesheet', href='/public/assets/css/review.css', type='text/css')
  script(src='https://code.jquery.com/jquery-3.5.1.min.js', type="text/javascript")
  script(src='https://unpkg.com/axios/dist/axios.min.js')

block content 

  div.reviews 
    - for (let i = 0; i < data.length ; i++)
      //- p #{data[i].user_id}
      p username #{data[i].username}
      img.profile_img(src= `${data[i].profile_image}`, alt='')
      a(href=`/review/info?id=${data[i].review_id}&locale=${data.locale}`)
        h3 review# #{data[i].review_id}
        img.review_img(src= `${data[i].image}`, alt='')
      h3.review_title #{data[i].review_title}
      p #{data[i].content}
      p #{data[i].created_dt}
      p #{data[i].updated_dt}

      a(href=`/movie?id=${data[i].movie_id}&locale=${data.locale}`, alt='')
        img.movie_poster(src= `${data[i].poster}`)
        p #{data[i].title}


  script. 
  