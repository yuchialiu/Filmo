extends layout.pug 

block head
  link(rel='stylesheet', href='./public/assets/css/review.css', type='text/css')
  script(src='https://code.jquery.com/jquery-3.5.1.min.js', type="text/javascript")
  script(src='https://unpkg.com/axios/dist/axios.min.js')

block content 

  div.reviews 
    - for (const i in data)
      p #{data[i].user_id}
      p #{data[i].username}
      img.profile_img(src= `${data[i].profile_image}`)
      a(href=`/review_info?id=${data[i].review_id}&locale=en-US`)
        h3 review# #{data[i].review_id}
      img.review_img(src= `${data[i].image}`)
      p #{data[i].content}
      p #{data[i].created_dt}
      p #{data[i].updated_dt}
      //- TODO:
      a(href=`/movie?id=${data[i].movie_id}&locale=en-US`)
        img.movie_poster(src= `${data[i].poster}`)
        p #{data[i].title}


  script. 
  