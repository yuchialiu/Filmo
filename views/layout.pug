            //- li
            //-   a(href=`/review?locale=${locale}`) Review
            li
              a.account(href=`/profile?locale=${locale}`) #{lang.nav.account}
                //- img(src='assets/images/profile-header.jpg' alt='')
            div.dropdown
              select.dropdown-toggle
                if locale == 'en-US'
                  option(value='en-US' selected) EN
                  option(value='zh-TW') ZH
                  option(value='fr-FR') FR
                else if locale == 'zh-TW'
                  option(value='en-US') EN
                  option(value='zh-TW' selected) ZH
                  option(value='fr-FR') FR
                else if locale == 'fr-FR'
                  option(value='en-US') EN
                  option(value='zh-TW') ZH
                  option(value='fr-FR' selected) FR
