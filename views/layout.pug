  .container
    .row
      .col-12
        nav.main-nav
          // ***** Logo Start *****
          a.logo(href=`/home?locale=${locale}`)
            //- img(src='https://d2idt211kyg8ql.cloudfront.net/images/filmo0926.png' alt='')
